{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },

  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "ESNext",
    "baseUrl": "./src",
    "strictPropertyInitialization": false,
    "allowJs": true,
    "moduleResolution": "node",
    "lib": ["ES2021", "DOM"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictBindCallApply": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "scripts/**/*.ts"],
}
