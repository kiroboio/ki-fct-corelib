{
  "extends": "./tsconfig.build.json",
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "mocha"]
  },
  "include": ["src/", "hardhat.config.ts", "test/"],
  "exclude": ["node_modules", "dist/**/*"]
}
