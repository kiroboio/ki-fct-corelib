{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "allowJs": true,
    "lib": ["es2017", "DOM"],
    "rootDir": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "hardhat.config.ts", "./test"],
  "exclude": ["node_modules", "dist"]
}
